<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFrameworks>netcoreapp2.0;net461</TargetFrameworks>
    <GenerateAssemblyInfo>false</GenerateAssemblyInfo>
    <RootNamespace>SampleClient</RootNamespace>
  </PropertyGroup>

  <ItemGroup>
    <Compile Remove="Logs\**" />
    <Compile Remove="pki\**" />
    <EmbeddedResource Remove="Logs\**" />
    <EmbeddedResource Remove="pki\**" />
    <None Remove="Logs\**" />
    <None Remove="pki\**" />
  </ItemGroup>

  <ItemGroup>
    <Compile Remove="Samples\BaseSample.cs" />
  </ItemGroup>

  <ItemGroup>
    <Compile Include="..\..\..\Include\AssemblyVersionInfo.cs" Link="Properties\AssemblyVersionInfo.cs" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="OPCFoundation.NetStandard.Opc.Ua" Version="0.4.5" />
  </ItemGroup>

  <ItemGroup>
    <Reference Include="Softing.Opc.Ua">
      <HintPath>..\..\..\..\bin\netstandard2.0\Softing.Opc.Ua.dll</HintPath>
    </Reference>
  </ItemGroup>

  <ItemGroup>
    <None Update="SampleClient.Config.xml">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </None>
  </ItemGroup>

</Project>
